{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "node",
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
